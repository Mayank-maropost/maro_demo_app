<div class="row">
  <div class="col-6 col-md-4">
    <h4>Add Images</h4> <br>
    <button type="button" class= "btn btn-default add_photo" data-toggle="modal" data-target="#myModal">Add Photo</button>
  </div>
  <div class="col-6 col-md-4">
    <%= render partial: "import_images"%>
  </div>
  <div class="col-6 col-md-4">
    <h4 style="color:yellow" class= "image_counter">Image Counter</h4>
    <div id="count_value" style="width:79px;height:89px;border:1px solid black;position:absolute;top:103%;left:10%;padding:2px;"><img src='/assets/loader1.jpg' width="64" height="64" /><br>Loading..</div>
  </div>
</div>

<div class="row">
	<% @photos.each do |photo| %>
  <% cache(photo, :expires_in => 5.minutes) do %>
    <div class="col-sm-4">
    	<h3><%= photo.name %></h3>
  			<%= image_tag(photo.image_url, :size => "300x200")  if photo %> 
				<br>
  			<div class="actions" align="center">
  				<button type="button" class="btn btn-primary btn-sm photo_edit" id="<%= photo.id %>">Edit</button>
  				<%= link_to 'Destroy', image_path(photo.id),
        		data: {:confirm => 'Are you sure?'}, :method => :delete, class: "btn btn-danger btn-sm" %>
  			</div>
    </div>
  	<%= render partial: "photo_edit_modal", locals: {photo: photo} %>
    <% end %>
	<% end if @photos %>	
</div> 

<div class="form-group pagination_div">
  <%= paginate @photos %>
</div>

<%= render partial: "photo_new_modal" %>

<script type="text/javascript">
  $(document).ready(function() {
    $("#footer").removeClass("navbar-fixed-bottom")
  });
</script>