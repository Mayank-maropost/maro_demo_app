<div class="form-group"> 
	<button type="button" class= "btn btn-default add_photo" data-toggle="modal" data-target="#myModal">Add Photo</button><br>
  <%= render partial: "import_images"%>
</div>

<div class="row">
	<% @photos.each do |photo| %>
    <div class="col-sm-4">
    	<h3><%= photo.name %></h3>
  			<%= image_tag(photo.image_url, :size => "300x200")  if photo %> 
				<br>
  			<div class="">
  				<button type="button" class="btn btn-primary btn-xs photo_edit" id="<%= photo.id %>">Edit</button>
  				<%= link_to 'Destroy', image_path(photo.id),
        		data: {:confirm => 'Are you sure?'}, :method => :delete, class: "btn btn-danger btn-xs" %>
  			</div>
    </div>
  	<%= render partial: "photo_edit_modal", locals: {photo: photo} %>
	<% end if @photos %>	
</div>
<%= paginate @photos %>

<%= render partial: "photo_new_modal" %>

<script type="text/javascript">
  $(document).ready(function() {
    $("#footer").removeClass("navbar-fixed-bottom")
  });
</script>