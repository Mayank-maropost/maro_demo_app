<center><h2>Log in</h2></center>

<!-- <form class="form-horizontal"> -->
 <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <!-- <label class="control-label col-sm-2" for="email">Email:</label> -->
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <!-- <input type="email" class="form-control" id="email" placeholder="Enter email"> -->
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group">
    <!-- <label class="control-label col-sm-2" for="pwd">Password:</label> -->
    <%= f.label :password, class: "control-label col-sm-2"  %>
    <div class="col-sm-10"> 
      <!-- <input type="password" class="form-control" id="pwd" placeholder="Enter password"> -->
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password"%>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group"> 
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label><%= f.check_box :remember_me %> Remember me</label>
        </div>
      </div>
    </div>
  <%end%>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <!-- <button type="submit" class="btn btn-default">Submit</button> -->
      <%= f.submit "Log in", class: "btn btn-default" %>
    </div>
  </div>
 <% end %> 

<%= render "devise/shared/links" %>


